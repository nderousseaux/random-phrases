{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run dev",
			"type": "docker-compose",
			"dockerCompose": {
			  "up": {
				"build": true,
				"detached": true
			  },
			  "files": [
				"${workspaceFolder}/docker-compose.yml",
				"${workspaceFolder}/docker-compose.dev.yml"
			  ]
			}
		},
		{
			"label": "Stop dev",
			"type": "docker-compose",
			"dockerCompose": {
			  "down": {
				"removeImages": "all"
			  },
			  "files": [
				"${workspaceFolder}/docker-compose.yml",
				"${workspaceFolder}/docker-compose.dev.yml"
			  ]
			}
		},
	]
}